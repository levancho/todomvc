// Chat List (Messages) Styles
.chat-list {
  flex: 1;
  padding: 10px 20px;
  overflow-y: auto; // Enables scrolling if messages exceed available space
  background-color: #fafafa;
  display: flex;
  flex-direction: column-reverse; // Display messages starting from the bottom
  justify-content: flex-end; // Make sure messages are anchored at the bottom
  align-items: flex-start; // Default alignment for assistant messages on the left
  
  &::-webkit-scrollbar {
    width: 8px;
  }

  &::-webkit-scrollbar-thumb {
    background-color: #c1c1c1;
    border-radius: 4px;
  }

  // Chat Bubble Container
  .chat-message {
    display: flex;
    margin-bottom: 10px; // Space between messages
    width: 100%; // Ensure it spans the full width of the chat list
  }

  .chat-message.user {
    justify-content: flex-end; // Aligns user's message to the right
  }

  .chat-message.assistant {
    justify-content: flex-start; // Aligns assistant's message to the left
  }

  .chat-bubble {
    padding: 10px;
    border-radius: 10px;
    max-width: 70%;
    word-wrap: break-word;
    clear: both; // Ensures each bubble takes a new line
  }

  .chat-bubble.user {
    background-color: #007bff;
    color: #fff;
    border-radius: 10px 0 10px 10px;
    align-self: flex-end; // Ensures user bubble sticks to the right
  }

  .chat-bubble.assistant {
    background-color: #e0e0e0;
    color: #333;
    border-radius: 0 10px 10px 10px;
    align-self: flex-start; // Ensures assistant bubble sticks to the left
  }
}
